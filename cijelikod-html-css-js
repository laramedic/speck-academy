<script type = "text/javascript" >
var clicks = 0;

function addProduct() {
    var ul = document.getElementById("lista");
    var unos = document.getElementById("unos");
    var li = document.createElement("li");

    li.setAttribute('id', unos.value);
    li.appendChild(document.createTextNode(unos.value));
    ul.appendChild(li);
}

function removeProduct() {
    clicks = -1;
    countItem();

    var ul = document.getElementById("lista");
    var unos = document.getElementById("unos");
    var item = document.getElementById(unos.value);
    while (ul.firstChild) {
        ul.removeChild(ul.firstChild);
    }
}

function countItem() {
    clicks += 1;
    document.getElementById("clicks").innerHTML = clicks;

}

</script>
<body>

  <h1>Products App</h1>

  <div id="prodTitle">
    <p>Product title:</p>
  </div>

  <input type="text" id="unos" placeholder="Insert product title" onfocus="this.value=''" required>
  <button onclick="countItem();addProduct();" type="button" class="button">Add product</button>

  <br><br>

 <label for="numProd" id="numProd">Number of products: <a id="clicks">0</a></label>

  <a href="#" id="remove" onclick="removeProduct()">Remove all products</a>

  <div id="results" class="resultWindow">
  <ul id="lista" class="posLista"></ul>
